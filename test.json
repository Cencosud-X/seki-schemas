{
  "$schema": "./v1/sekirc.schema.json",
  "name": "Seki",
  "description": "The forge to rule them all. \nAn automation tool for crafting legendary weapons",
  "notifications": {
    "email": "kmilo8346@gmail.com"
  },
  "targets": {
    "ui": {
      "alias": "Seki UI",
      "description": "Web app to mount via electron. \nThe connection to OS capabilities was inspired via ionic plugins framework. using a javascript bridge API.",
      "skip": true,
      "stages": {
        "staging": {
          "version": 1
        }
      },
      "vulnerabilities": {
        "ignores": ["CVE-12-1"]
      }
    },
    "electron": {
      "alias": "Electron Packager",
      "description": "Electron Framework app to package Seki UI to Mac operating systems.",
      "stages": {
        "staging": {
          "version": 1
        }
      }
    },
    "core": {
      "alias": "Core Library",
      "description": "Useful shared classes that are availables for all project's in the monorepo."
    },
    "models": {
      "skip": true,
      "alias": "Model's Library",
      "description": "Library that contains all the model definition for Seki."
    },
    "cli": {
      "alias": "Command line interface (CLI)",
      "description": "All the command that interact with the filesystem in the ecosystem with seki , will be here"
    },
    "api": {
      "alias": "Seki API",
      "description": "Backend for Seki used to hide oauth secrets and other functionalities.",
      "stages": {
        "staging": {
          "version": 1,
          "replicas": 2,
          "resources": {
            "cpu": 300,
