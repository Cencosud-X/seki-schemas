{
  "$schema": "http://json-schema.org/schema",
  "type": "object",
  "description": "Catalog information for a list of extensions in Seki",
  "required": ["name", "descriptions", "types", "author"],
  "properties": {
    "required": true,
    "name": {
      "type": "string",
      "description": "Name of the catalog",
      "minLength": 3
    },
    "descriptions": {
      "description": "Localized descriptions to describe the catalog",
      "type": "object",
      "required": ["es", "en"],
      "properties": {
        "es": {
          "type": "string",
          "description": "catalog description (spanish)",
          "minLength": 5
        },
        "en": {
          "type": "string",
          "description": "catalog description (english)",
          "minLength": 5
        },
        "pt": {
          "type": "string",
          "description": "catalog description (portugues)",
          "minLength": 5
        }
      }
    },
    "types": {
      "type": "array",
      "description": "List of available types",
      "items": {
        "type": "string",
        "description": "Extension rc file path",
        "pattern": "^[a-z0-9_]+\\/{0,1}extensionrc\\.json$"
      },
      "minItems": 1
    },
    "author": {
      "type": "object",
      "required": ["name", "github_user"],
      "properties": {
        "name": {
          "type": "string",
          "description": "Name"
        },
        "github_user": {
          "type": "string",
          "description": "Name of the github user (public profile name)"
        }
      }
    }
  }
}
