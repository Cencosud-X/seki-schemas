{
  "$schema": "http://json-schema.org/schema",
  "allOf": [
    {
      "properties": {
        "kind": {
          "type": "string",
          "description": "Cloud component type",
          "enum": ["kafka"],
          "readOnly": true
        },
        "properties": {
          "type": "object",
          "required": ["topics"],
          "description": "Kafka properties",
          "properties": {
            "topics": {
              "type": "array",
              "description": "Setup the topics that we will create in kafka",
              "minItems": 1,
              "items": {
                "type": "string",
                "pattern": "^[a-z0-9.-]+$"
              }
            } 
          }
        }
      }
    },
    {
      "$ref": "https://raw.githubusercontent.com/Cencosud-X/seki-schemas/main/v1/cloud/components/types/base.schema.json"
    }
  ]
}
