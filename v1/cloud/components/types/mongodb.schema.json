{
  "$schema": "http://json-schema.org/schema",
  "allOf": [
    {
      "properties": {
        "kind": {
          "type": "string",
          "description": "Cloud component type",
          "enum": ["mongodb"],
          "readOnly": true
        },
        "settings": {
          "required": ["connectionString"],
          "type": "object",
          "description": "Specific configuration",
          "properties": {
            "connectionString": {
              "type": "string",
              "description": "MongoDB connection string",
              "minLength": 2,
              "default": "mongodb://localhost:27017/mydb"
            }
          }
        }
      }
    },
    {
      "$ref": "https://raw.githubusercontent.com/Cencosud-X/seki-schemas/main/v1/components/types/base.schema.json"
    }
  ]
}
