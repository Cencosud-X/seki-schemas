{
  "$schema": "http://json-schema.org/schema",
  "allOf": [
    {
      "properties": {
        "kind": {
          "type": "string",
          "description": "Cloud component type",
          "enum": ["npm"],
          "readOnly": true
        },
        "identifier": {
          "type": "string",
          "description": "Cloud component identifier",
          "default": "cencosudx"
        },
        "settings": {
          "type": "object",
          "required": ["account", "organizations"],
          "description": "NPM settings",
          "properties": {
            "account": {
              "type": "string",
              "description": "Account name",
              "pattern": "^[a-z0-9.-]+$"
            },
            "organizations": {
              "type": "array",
              "description": "List of organizations",
              "minItems": 1,
              "items": {
                "type": "string",
                "pattern": "^[a-z0-9.-]+$"
              }
            }
          }
        }
      }
    },
    {
      "$ref": "https://raw.githubusercontent.com/Cencosud-X/seki-schemas/main/v1/cloud/components/types/base.schema.json"
    }
  ]
}
