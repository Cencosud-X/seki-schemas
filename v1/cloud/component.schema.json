{
  "$schema": "http://json-schema.org/schema",
  "required": ["identifier", "kind", "properties"],
  "properties": {
    "identifier": {
      "type": "string",
      "description": "Cloud component identifier",
      "default": "default"
    },
    "version": {
      "type": "string",
      "description": "Cloud component version",
      "pattern": "^([0-9]+)\\.([0-9]+)\\.([0-9]+)(?:-([0-9A-Za-z-]+(?:\\.[0-9A-Za-z-]+)*))?(?:\\+[0-9A-Za-z-]+)?$"
    }
  }
}
