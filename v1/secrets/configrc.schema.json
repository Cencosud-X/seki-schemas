{
  "$schema": "http://json-schema.org/schema",
  "required": ["secrets"],
  "properties": {
    "secrets": {
      "required": ["imports"],
      "type": "object",
      "description": "Configuration for secrets variables",
      "properties": {
        "imports": {
          "type": "array",
          "description": "Variable list to import from the root folder (workspace path)",
          "items": {
            "type": "string",
            "description": "secret name to import",
            "minItems": 0
          }
        }
      }
    }
  }
}
