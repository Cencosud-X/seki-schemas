{
  "$schema": "http://json-schema.org/schema",
  "additionalProperties": false,
  "definitions": {
    "variable": {
      "description": "Variable definition",
      "properties": {
        "type": {
          "type": "string",
          "enum": [
            "string",
            "boolean",
            "number"
          ]
        },
        "description": {
          "type": "string",
          "minLength": 5
        },
        "default": {
          "description": "Secret default value"
        }
      },
      "required": [
        "type"
      ],
      "allOf": [
        
        {
          "if": {
            "properties": {
              "type": {
                "const": "string"
              }
            }
          },
          "then": {
            "properties": {
              "default": {
                "type": "string"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "boolean"
              }
            }
          },
          "then": {
            "properties": {
              "default": {
                "type": "boolean"
              }
            }
          }
        },
        {
          "if": {
            "properties": {
              "type": {
                "const": "number"
              }
            }
          },
          "then": {
            "properties": {
              "default": {
                "type": "number"
              }
            }
          }
        }
      ]
    }
  },
  "properties": {
    "$schema": {
      "type": "string",
      "description": "Schema JSON associated"
    },
    "secrets": {
      "type": "array",
      "items": {
        "type": "object",
        "allOf": [
          {
            "properties": {
              "name": {
                "pattern": "^[A-Z0-9_]+$"
              }
            },
            "required": ["name"]
          },
          {
            "$ref": "#/definitions/variable"
          }
        ]
      }
    },
    "files": {
      "type": "array",
      "items": {
        "type": "object",
        "allOf": [
          {
            "properties": {
              "name": {
                "pattern": "^[a-z0-9_]+\\/{0,1}[a-z0-9_]+\\.{1}\\w{2,6}$",
                "description": "Name of the file key associated in the secret store, secrets.json is a reserved name"
              },
              "description": {
                "minLength": 3,
                "description": "Secret description"
              },
              "engine": {
                "type": "string",
                "description": "Where to store the file. Possible choices are Secret Manager(if the file is below 64Kbs) and Cloud Store(supports large files)",
                "default": "cloud-storage",
                "enum": ["secret-manager", "cloud-storage"]
              }
            },
            "required": ["name"]
          }
        ]
      }
    }
  }
}