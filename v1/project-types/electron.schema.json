{
  "$schema": "http://json-schema.org/schema",
  "required": [
    "name",
    "description",
    "path",
    "kind"
  ],
  "properties": {
    "name": {
      "type": "string",
      "description": "Project name",
      "readOnly": true
    },
    "description": {
      "type": "string",
      "description": "Project description",
      "readOnly": true
    },
    "path": {
      "type": "string",
      "description": "Project relative path to install",
      "readOnly": true
    },
    "kind": {
      "type": "string",
      "description": "Project type",
      "enum": [
        "electron"
      ],
      "readOnly": true
    },
    "settings": {
      "required": [
        "frontendProject"
      ],
      "type": "object",
      "description": "Specific configuration",
      "properties": {
        "frontendProject": {
          "type": "string",
          "description": "Front end project to lift in electron",
          "minLength": 2
        }
      }
    }
  }
}
