{
  "$schema": "http://json-schema.org/schema",
  "allOf": [
    {
      "properties": {
        "kind": {
          "type": "string",
          "description": "Project type",
          "enum": [
            "subscriber"
          ],
          "readOnly": true
        },
        "settings": {
          "required": [
            "topics"
          ],
          "type": "object",
          "description": "Configuration for plugin",
          "properties": {
            "topics": {
              "type": "array",
              "description": "Topic configuration",
              "minItems": 1,
              "items": {
                "type": "object",
                "required": [
                  "name",
                  "onReceiveMessagesHandler",
                  "provider"
                ],
                "properties": {
                  "name": {
                    "type": "string",
                    "description": "Topic name to subscribe"
                  },
                  "provider": {
                    "type": "string",
                    "description": "Stream technology provider",
                    "enum": [
                      "PubSub",
                      "Kafka"
                    ]
                  },
                  "onReceiveMessagesHandler": {
                    "type": "string",
                    "description": "Handler to call when receive messages from the streamer"
                  }
                }
              }
            }
          }
        }
      }
    },
    {
      "$ref": "https://raw.githubusercontent.com/Cencosud-X/seki-schemas/main/v1/projects/types/base.schema.json"
    }
  ]
}