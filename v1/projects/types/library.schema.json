{
  "$schema": "http://json-schema.org/schema",
  "allOf": [
    {
      "properties": {
        "kind": {
          "type": "string",
          "description": "Project type",
          "enum": [
            "library"
          ],
          "readOnly": true
        },
        "settings": {
          "required": [],
          "type": "object",
          "description": "Specific configuration",
          "properties": {
            "publishable": {
              "description": "a library marked as publishable (npm publish)",
              "type":"boolean",
              "default": false
            },
            "buildable": {
              "description": "a library marked as a 'build' dist output",
              "type":"boolean",
              "default": false
            }
          },
          "if": {
            "properties": {
              "publishable": {
                "const": true
              }
            },
            "required": ["publishable"]
          },
          "then": {
            "properties": {
              "npm": {
                "required": ["account", "organization"],
                "type":"object",
                "description": "npm configuration for publishing",
                "properties": {
                  "account": {
                    "type": "string",
                    "description": "npm account to publish"
                  },
                  "organization": {
                    "type": "string",
                    "description": "npm organization name"
                  }
                }
              }
            },
            "required": ["npm"]
          }
        }
      }
    },
    {
      "$ref": "https://raw.githubusercontent.com/Cencosud-X/seki-schemas/main/v1/projects/types/base.schema.json"
    }
  ]
}